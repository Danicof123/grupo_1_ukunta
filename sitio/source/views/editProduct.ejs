<!DOCTYPE html>
<html lang="es">

    <%- include('partials/head')  %> 

<body class="register f-display f-main-y minvh-100">
    <%- include('partials/mini-header')  %> 
   
    <div class="container f-main-center f-grow-1">
        <div class="mb-12 lp-6 f-main-y f-cross-center">

            <h3 class="f-self-start my-4">Editar producto</h3>

            <form class="w-100 mbt-4" action="#">

                <!-- Nombre -->
                <div class="reg__ctrl-input mbt-4">
                    <input type="text" placeholder="*Nombre" name="name" value="Hidromiel Cannábica" class="reg__input">
                </div>  

                <!-- stock -->
                <!-- <div class="reg__ctrl-input my-4">
                    <input type="number" placeholder="stock" class="reg__input" name="stock">
                </div> -->

                <!-- Categoria -->
                <div class="reg__ctrl-input my-4">
                    <select name="category" class="reg__input">
                        <option value="value1" selected>Hidromiel</option>
                        <option value="value2">Cerveza</option>
                        <option value="value4">Merchandasing</option>
                    </select>
                </div>             

                <!-- Descripcion domicilio -->
                <div class="reg__ctrl-textarea my-4">
                    <textarea name="*description" class="text__area" placeholder="*Descripción del producto">Si tomas este producto, a los siguientes 7 días estarás con Thor (?</textarea>
                </div>

                <!-- precio -->
                <div class="reg__ctrl-input my-4">
                    <input type="number" placeholder="*precio" class="reg__input" name="price" value="99999">
                </div>
                <!-- Imagenes -->
                <div class="concon">

                  <!-- Imagen 01 -->
                  <div class="mb-6 tb-3 my-5">
                    <div class="reg__ctrl-input-image mbt-4">
                      <img src="/images/products/Bebidas/Hidromiel/cannabica-305x368.jpg" alt="cannabica" class="input__image">
                      <input type="file" accept=".jpg, .png" name="image" max="5" maxfile="5" class="image__input">
                    </div>
                  </div>
                  <!-- Imagen 02 -->
                  <div class="mb-6 tb-3 my-5">
                    <div class="reg__ctrl-input-image mbt-4">
                      <img src="/images/products/Bebidas/Hidromiel/cannabica-305x368.jpg" alt="cannabica" class="input__image">
                      <input type="file" accept=".jpg, .png" name="image" max="5" maxfile="5" class="image__input">
                    </div>
                  </div>

                  <!-- Imagen 03 -->
                  <div class="mb-6 tb-3 my-5">
                    <div class="reg__ctrl-input-image mbt-4">
                      <img src="/images/products/Bebidas/not.jpg" alt="cannabica" class="input__image">
                      <input type="file" accept=".jpg, .png" name="image" max="5" maxfile="5" class="image__input image__input--not">
                    </div>
                  </div>

                  <!-- Imagen 04 -->
                  <div class="mb-6 tb-3 my-5">
                    <div class="reg__ctrl-input-image mbt-4">
                      <img src="/images/products/Bebidas/not.jpg" alt="cannabica" class="input__image">
                      <input type="file" accept=".jpg, .png" name="image" max="5" maxfile="5" class="image__input image__input--not">
                    </div>
                  </div>

                </div>

            </form>

            <nav class="f-display f-main-between reg__navbottom f-cross-end mbt-5">
                <div class="button button-rojo reg__navbutton">
                    <a href="/home"><i class="fas fa-times"></i></a>
                </div>
                <div class="button button-verde reg__navbutton">
                    <a href="/home"><i class="fas fa-check"></i></a>
                </div>
            </nav>

        </div>

    </div>
    
</body>

</html>